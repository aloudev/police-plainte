<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Application de gestion des plaintes de la police</display-name>
	<context-param>
	<param-name>contextConfigLocation</param-name>
			<param-value>classpath:WEB-INF/spring-config/plainte-context.xml</param-value>
	</context-param>
	<servlet>
		<servlet-name>plainteServlet</servlet-name>
		<servlet-class>com.alandiay.police.plainte.application.rest.PolicePlainteServlet</servlet-class>
		 <init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:WEB-INF/spring-conf/plainte-context.xml</param-value>
		</init-param>
		
	</servlet>

	<servlet-mapping>
		<servlet-name>plainteServlet</servlet-name>
		<url-pattern>/police/plainte/*</url-pattern>
	</servlet-mapping>
	

<!--listener de chargement du contexte spring -->
	 <listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

<!-- <filter><filter-class></filter-class></filter> -->	
</web-app>
